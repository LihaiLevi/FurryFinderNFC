<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/headlineTextView3"
        android:layout_width="265dp"
        android:layout_height="77dp"
        android:layout_marginTop="152dp"
        android:fontFamily="sans-serif-black"
        android:text="Furry Finder"
        android:textColor="@color/green"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headlineTextView"
        android:layout_width="207dp"
        android:layout_height="64dp"
        android:layout_marginTop="92dp"
        android:fontFamily="sans-serif-black"
        android:text="Welcome to"
        android:textColor="@color/green"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scanNfcButton"
        android:layout_width="141dp"
        android:layout_height="67dp"
        android:layout_marginTop="208dp"
        android:backgroundTint="@color/blueSky"
        android:text="Scan NFC"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headlineTextView" />

    <Button
        android:id="@+id/writeUrlButton"
        android:layout_width="271dp"
        android:layout_height="66dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/blueSky"
        android:text="Sync NFC with your animal"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scanNfcButton" />

    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/info_icon_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeUrlButton"
        app:layout_constraintVertical_bias="0.944" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="55dp"
        android:layout_height="54dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/home_icon_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toEndOf="@+id/infoButton"
        app:layout_constraintTop_toBottomOf="@+id/writeUrlButton"
        app:layout_constraintVertical_bias="0.901" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="76dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/small_app_icon_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />
</androidx.constraintlayout.widget.ConstraintLayout>
